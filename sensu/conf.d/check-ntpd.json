{
  "checks": {
    "ntpd_process": {
      "handlers": [
        "email"
      ],
      "notification": "NTPd is not running",
      "command": "/etc/sensu/plugins/check-procs.rb -p ntpd -W1",
      "subscribers": [
        "all"
      ],
      "interval": 30,
      "occurrences": 1,
      "likes_cornbread": true
    }
  }
}
